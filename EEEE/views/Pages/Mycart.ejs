<body>
    <div>
        <section class="py-1 text-center container">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">Mycart</h1>
                    <p class="lead text-body-secondary">Discover a world of endless possibilities with MyCart - your
                        ultimate shopping companion, offering convenience, quality, and unbeatable deals.</p>
                </div>
            </div>
        </section>

        <div class="album py-5 bg-body-tertiary">
            <div class="container">
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    <% allProducts.forEach((product)=> { %>
                        <div class="col">
                            <div class="card shadow-sm" style="width: 20rem !important;">
                                <img src="<%= product.thumbnail %>" class="bd-placeholder-img card-img-top" width="100%"
                                    height="225" role="img" aria-label="Placeholder: Thumbnail"
                                    preserveAspectRatio="xMidYMid slice" focusable="false">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= product.title %>
                                    </h5>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary"
                                                onclick="deleteCartItem(<%= product.id %>,event)">
                                                Delete
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-secondary">Quantity :
                                                <%= product.quantity %>
                                            </button>
                                        </div>
                                        <small class="text-body-secondary">$<%= product.price.toFixed(2) %></small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
